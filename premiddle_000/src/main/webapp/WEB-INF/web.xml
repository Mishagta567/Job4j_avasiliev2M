<web-app>
    <servlet>
        <servlet-name>JsonController</servlet-name>
        <servlet-class>ru.job4j.todo01.JsonController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsonController</servlet-name>
        <url-pattern>/json</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TodoItem</servlet-name>
        <servlet-class>ru.job4j.todo01.TodoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TodoItem</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>
</web-app>