<hibernate-mapping>
    <class name="ru.job4j.todo01.TodoItem" table="todo_item">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="descr" column="descr"></property>
        <property name="created" column="created"></property>
        <property name="done" column="done"></property>
    </class>
</hibernate-mapping>